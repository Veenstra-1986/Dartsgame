generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Player {
  id        String   @id @default(cuid())
  name      String
  email     String?  @unique
  initials  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  avatar    String?
  nickname  String?
  scores    Score[]
}

model Challenge {
  id          String   @id @default(cuid())
  name        String
  description String
  type        String
  targetValue Int?
  date        DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  scores      Score[]
}

model Score {
  id          String    @id @default(cuid())
  playerId    String
  challengeId String
  score       Int
  details     String?
  submittedAt DateTime  @default(now())
  challenge   Challenge @relation(fields: [challengeId], references: [id], onDelete: Cascade)
  player      Player    @relation(fields: [playerId], references: [id], onDelete: Cascade)

  @@unique([playerId, challengeId])
  @@index([challengeId])
  @@index([playerId])
}

model SiteSettings {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  mimeType  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
