// Darts Challenge App - Marimecs Dart Club

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Players/Club members
model Player {
  id        String   @id @default(cuid())
  name      String
  email     String?  @unique
  initials  String?  // For leaderboard display
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  scores    Score[]
}

// Daily challenges
model Challenge {
  id          String   @id @default(cuid())
  name        String   // e.g., "High Score (3 Pijlen)"
  description String   // Rules and instructions
  type        String   // challenge type: high_score, triple_20, bullseye, target_number, etc.
  targetValue Int?     // For challenges with specific targets
  date        DateTime // The day this challenge is active
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  scores      Score[]
}

// Scores submitted by players
model Score {
  id          String   @id @default(cuid())
  playerId    String
  challengeId String
  score       Int      // The actual score
  details     String?  // Additional details (JSON string for complex scores)
  submittedAt DateTime @default(now())

  player      Player   @relation(fields: [playerId], references: [id], onDelete: Cascade)
  challenge   Challenge @relation(fields: [challengeId], references: [id], onDelete: Cascade)

  @@unique([playerId, challengeId])
  @@index([challengeId])
  @@index([playerId])
}
